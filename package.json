{
  "name": "ton-solidity",
	"displayName": "ton-solidity",
	"description": "Support for ton-solidity language",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.59.0"
	},
	"categories": [
		"Snippets"
	],
	"activationEvents": [
        "onCommand:ton-solidity.helloWorld"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [{
            "command": "ton-solidity.helloWorld",
            "title": "Hello World"

		}],
		"languages": [
		  {
			"id": "ton-solidity",
			"aliases": [			 
			  "ton-solidity"
			],
			"extensions": [
			  ".sol"
			],
			"configuration": "./ton-solidity.configuration.json"
		  }
		],
		"snippets": [
			{
				"language": "ton-solidity",
				"path": "./snippets/ton-solidity.json"
			}
		],
		"grammars": [
		  {
			"language": "ton-solidity",
			"scopeName": "source.ton-solidity",
			"path": "./syntaxes/ton-solidity.json"
		  }
		]		
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
        "@types/vscode": "^1.59.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "14.x",
        "eslint": "^7.27.0",
        "glob": "^7.1.7",
        "mocha": "^8.4.0",
        "typescript": "^4.3.2",
        "vscode-test": "^1.5.2"
    }

}
