extends layout

block content
  .container
    form.row.g-3
      .search
        .row.row_init
          .col
            label.form-label() Token address
            input.form-control(name="tokenAddress" onInput="checkAddressInput(this)" type="text" pattern="[A-Za-z0-9:]+" placeholder="Token address" aria-label="Token address")
      input.btn.btn-blue(type="submit" value="Find")

    .token-info-container
      if tokenInfo        
        each line in tokenInfo
          if line.tag == 'p'
            p= line.title + ': ' + line.value
          else if line.tag == 'img'
            p= line.title 
            img(src=line.value)
          else if line.tag == 'video'
            p= line.title 
            video(src=line.value)
          else if line.tag == 'a'
            p= line.title 
            a(href=line.value target="_blank")= line.value
          
  script(src="/scripts/input-validation.js")
    




